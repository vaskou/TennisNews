<Page loaded="loaded" >
   
    <Page.actionBar>
        <ActionBar title="TennisNews" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <StackLayout class="p-20">
        <ListView id="mainListView" items="{{ mainList }}">
            <ListView.itemTemplate>
                <StackLayout>
                    <Label id="label1" text="{{ title }}"  />
                    <!-- <WebView src="{{ description }}"></WebView> -->
                    <Image src="{{ image_src }}" stretch="aspectFill" />
                    <TextView text="{{ description }}" editable="false"></TextView>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>
